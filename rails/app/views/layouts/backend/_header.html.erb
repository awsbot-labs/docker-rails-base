            <header id="header-navbar" class="content-mini content-mini-full">
                <!-- Header Navigation Right -->
                <ul class="nav-header pull-right">
                    <li>
                        <div class="btn-group">
                            <button class="btn btn-default btn-image dropdown-toggle" data-toggle="dropdown" type="button">
                                <img src="/assets/img/avatars/avatar10.jpg" alt="Avatar">
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li class="dropdown-header">Mailbox</li>
                                <li>
                                    <%= link_to :inbox, 'tabindex': '-1' do %>
                                      <i class="fa fa-inbox pull-right"></i>
                                      <% if @unread.count > 0 %><span class="badge badge-primary pull-right"><%= @unread.count %></span><% end %>Inbox
                                    <% end %>
                                </li>
                                <li>
                                    <%= link_to :starred, 'tabindex': '-1' do %>
                                      <i class="fa fa-star pull-right"></i>
                                      <% if @starred.count > 0 %><span class="badge badge-warning pull-right"><%= @starred.count %></span><% end %>Starred
                                    <% end %>
                                </li>
                                <li>
                                    <%= link_to :sent, 'tabindex': '-1' do %>
                                      <i class="fa fa-send pull-right"></i>
                                      <% if @sent.count > 0 %><span class="badge badge-success pull-right"><%= @sent.count %></span><% end %>Sent
                                    <% end %>
                                </li>
                                <li>
                                    <%= link_to :drafts, 'tabindex': '-1' do %>
                                      <i class="fa fa-pencil pull-right"></i>
                                      <% if @drafts.count > 0 %><span class="badge badge-danger pull-right"><%= @drafts.count %></span><% end %>Drafts
                                    <% end %>
                                </li>
                                <li>
                                    <%= link_to :archived, 'tabindex': '-1' do %>
                                      <i class="fa fa-folder pull-right"></i>
                                      <% if @archived.count > 0 %><span class="badge badge-info pull-right"><%= @archived.count %></span><% end %>Archived
                                    <% end %>
                                </li>
                                <li>
                                    <%= link_to :trash, 'tabindex': '-1' do %>
                                      <i class="fa fa-trash pull-right"></i>
                                      <% if @trashed.count > 0 %><span class="badge badge-default pull-right"><%= @trashed.count %></span><% end %>Trash
                                    <% end %>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <%= link_to '<i class="fa fa-cog pull-right"></i>Settings'.html_safe, :edit_user_registration, 'tabindex': '-1' %>
                                </li>
                                <li>
                                   <%= link_to '<i class="fa fa-sign-out pull-right"></i>Log out'.html_safe, :destroy_user_session, 'tabindex': '-1', 'data-method': :delete %>
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>
                <!-- END Header Navigation Right -->

                <!-- Header Navigation Left -->
                <ul class="nav-header pull-left">

                    <li class="js-header-search header-search">
                      <%= form_tag "/search", method: :post, class: "form-horizontal" do |f| %>
                        <div class="form-material form-material-primary input-group remove-margin-t remove-margin-b">
                          <%= text_field_tag :q, params[:q], class: "form-control", placeholder: "Search.." %>
                          <span class="input-group-addon"><i class="si si-magnifier"></i></span>
                        </div>
                      <% end %>
                    </li>
                </ul>
                <!-- END Header Navigation Left -->
            </header>