<% content_for :js_code do %>
  <!-- Page JS Plugins -->
  <script src="/assets/js/plugins/jquery-validation/jquery.validate.min.js"></script>

  <!-- Page JS Code -->
  <script src="/assets/js/pages/base_pages_register.js"></script>
<% end %>
        <!-- Register Content -->
        <div class="content overflow-hidden">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
                    <!-- Register Block -->
                    <div class="block block-themed animated fadeIn">
                        <div class="block-header bg-success">
                            <ul class="block-options">
                                <li>
                                    <%= link_to '<i class="si si-login"></i>'.html_safe, :user_session, 'data-toggle': "tooltip", 'data-placement': "left", 'title': "Log In" %>
                                </li>
                            </ul>
                            <h3 class="block-title">Edit Details</h3>
                        </div>
                        <div class="block-content block-content-full block-content-narrow">
                            <!-- Register Title -->
                            <h1 class="h2 font-w600 push-30-t push-5">OneUI</h1>
                            <p>Change your account settings.</p>
                            <!-- END Register Title -->

                            <!-- Regisration Form -->
                            <!-- jQuery Validation (.js-validation-register class is initialized in js/pages/base_pages_register.js) -->
                            <!-- For more examples you can check out https://github.com/jzaefferer/jquery-validation -->
                            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'js-validation-register form-horizontal push-50-t push-50' }) do |f| %>
                              <%= devise_error_messages! %>

                              <div class="form-group">
                                  <div class="col-xs-12">
                                      <div class="form-material form-material-success">
                                          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
                                          <%= f.label :email %>
                                      </div>
                                  </div>
                              </div>

                              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                              <% end %>

                              <div class="form-group">
                                  <div class="col-xs-12">
                                      <div class="form-material form-material-success">
                                        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Leave blank if you don't want to change it"  %>
                                        <%= f.label :password %>
                                      </div>
                                  </div>
                              </div>

                              <div class="form-group">
                                  <div class="col-xs-12">
                                      <div class="form-material form-material-success">
                                        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm your new password' %>
                                        <%= f.label :password_confirmation %>
                                      </div>
                                  </div>
                              </div>

                              <div class="form-group">
                                  <div class="col-xs-12">
                                      <div class="form-material form-material-success">
                                          <%= f.label :current_password %>
                                          <%= f.password_field :current_password, autocomplete: "off", class: 'form-control', placeholder: 'Your current password for confirmation' %>
                                      </div>
                                  </div>
                              </div>

                              <div class="form-group">
                                  <div class="col-xs-12 col-sm-6 col-md-5">
                                      <div class="actions">
                                        <%= button_tag(type: 'submit', class: 'btn btn-block btn-success') do %>
                                          <i class="fa fa-plus pull-right"></i> Update
                                        <% end %>
                                      </div>
                                  </div>
                              </div>
                            <% end %>

                            <!-- Cancel Title -->
                            <h1 class="h2 font-w600 push-30-t push-5">Unhappy?</h1>
                            <p>Cancel your account.</p>
                            <!-- END Cancel Title -->
                            <div class="form-group">
                                <div class="col-xs-12 col-sm-6 col-md-5">
                                    <div class="actions">
                                      <%= button_tag registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-block btn-success' do %><i class="fa fa-plus pull-right"></i> Cancel it! <% end %>
                                    </div>
                                </div>
                            </div>

                            <!-- END Register Form -->
                        </div>
                    </div>
                    
                    <!-- END Register Block -->
                </div>
            </div>
        </div>
        <!-- END Register Content -->


