                            <!-- Register Form -->
                            <!-- jQuery Validation (.js-validation-register class is initialized in js/pages/base_pages_register.js) -->
                            <!-- For more examples you can check out https://github.com/jzaefferer/jquery-validation -->
                            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'js-validation-register form-horizontal push-50-t push-30'}) do |f| %>
                              <%= devise_error_messages! %>
                              <div class="form-group">
                                  <div class="col-xs-12">
                                      <div class="form-material form-material-success">
                                          <%= f.label :email %>
                                          <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Please provide your email" %>
                                      </div>
                                  </div>
                              </div>
                              <div class="form-group">
                                  <div class="col-xs-12">
                                      <div class="form-material form-material-success">
                                          <%= f.label :password %>
                                          <% if @minimum_password_length %>
                                          <em>(<%= @minimum_password_length %> characters minimum)</em>
                                          <% end %>
                                          <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Choose a strong password.." %>
                                      </div>
                                  </div>
                              </div>
                              <div class="form-group">
                                  <div class="col-xs-12">
                                      <div class="form-material form-material-success">
                                          <%= f.label :password_confirmation %>
                                          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "..and confirm it" %>
                                      </div>
                                  </div>
                              </div>
                              <div class="form-group">
                                  <div class="col-xs-12">
                                      <label class="css-input switch switch-sm switch-success">
                                          <input type="checkbox" id="register-terms" name="register-terms"><span></span> I agree with terms &amp; conditions
                                      </label>
                                  </div>
                              </div>
                              <div class="form-group">
                                  <div class="col-xs-12">
                                      <div class="actions">
                                        <%= button_tag(type: 'submit', class: 'btn btn-block btn-success') do %>
                                          <i class="fa fa-plus pull-right"></i> Sign Up
                                        <% end %>
                                      </div>
                                  </div>
                              </div>
                              <div class="form-group">
                                  <div class="col-xs-12">
                                      <div class="actions">
                                         <%= link_to user_omniauth_authorize_path(:google_oauth2), class: 'btn btn-block btn-danger' do %>
                                         <i class="fa fa-google-plus pull-right"></i> Sign up with Google
                                         <% end %>
                                      </div>
                                  </div>
                              </div>
                            <% end %>
                            <!-- END Register Form -->